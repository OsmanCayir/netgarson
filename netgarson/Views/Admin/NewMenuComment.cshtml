@model List<netgarson.Entities.Menu>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section id="container">
    <!--header start-->
    <header class="header white-bg">
        @Html.Partial("~/Views/Shared/_AdminTopMenuPartialView.cshtml")
    </header>
    <!--header end-->
    <!--sidebar start-->
    <aside>
        @Html.Partial("~/Views/Shared/_AdminLeftMenuPartialView.cshtml")
    </aside>
    <!--sidebar end-->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            @*<div class="div-alert">
                    <div class="alert alert-success div-alertSuccess" role="alert" style="display:none">
                    </div>
                    <div class="alert alert-danger div-alertDanger" role="alert" style="display:none">
                    </div>
                </div>*@
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="card">
                        <header class="card-header">
                            Yeni Menü Yorumu
                            <button id="button-save" class="btn btn-primary btn-sm" type="button" style="float:right"><i class="fa fa-save"></i> Kaydet</button>
                        </header>
                        <div class="card-body">
                            <form class="form-horizontal tasi-form" method="get">

                                <div class="form-group row">
                                    <label class="col-sm-2 col-sm-2 control-label">Menü</label>
                                    <div class="col-sm-10">
                                        <select id="select-menuList" class="js-example-basic-multiple" multiple="multiple">
                                            @foreach (var menu in Model)
                                            {
                                                <option value="@menu.ID">@menu.Name</option>
                                            }
                                        </select>

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-sm-2 control-label">Yorum</label>
                                    <div class="col-sm-10">
                                        <textarea id="textarea-commentText" class="form-control"></textarea>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Artı Sayısı</label>
                                    <div class="col-sm-10">
                                        <div class="form-group row">
                                            <div class="my-colspan" style="width:135px">
                                                <div class="input-group mb-3">
                                                    <input id="input-plus" type="text" class="form-control" maxlength="9" style="text-align:right" onkeypress="validateNumber(event)" value="0">
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Eksi Sayısı</label>
                                    <div class="col-sm-10">

                                        <div class="form-group row">
                                            <div class="my-colspan" style="width:135px">
                                                <div class="input-group mb-3">
                                                    <input id="input-cons" type="text" class="form-control" maxlength="9" style="text-align:right" onkeypress="validateNumber(event)" value="0">
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>

                                <div class="form-group row last">
                                    <label class="col-sm-2 col-sm-2 control-label"></label>
                                    <div class="col-sm-10">

                                        <label class="label_check" for="input-isNew" style="padding-bottom:7px">
                                            <input id="input-isNew" type="checkbox" checked> Yeni Yorum
                                        </label>

                                    </div>
                                </div>

                                <div class="form-group row last">
                                    <label class="col-sm-2 col-sm-2 control-label"></label>
                                    <div class="col-sm-10">

                                        <label class="label_check" for="input-active" style="padding-bottom:7px">
                                            <input id="input-active" type="checkbox" checked> Aktif Yorum
                                        </label>

                                    </div>
                                </div>



                            </form>
                        </div>
                    </section>



                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
    <!--footer start-->
    <footer class="site-footer">
        <div class="text-center">
            2018 © FlatLab by VectorLab.
            <a href="#" class="go-top">
                <i class="fa fa-angle-up"></i>
            </a>
        </div>
    </footer>
    <!--footer end-->
</section>

